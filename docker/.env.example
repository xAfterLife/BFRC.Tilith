# =============================================================================
# Tilith Discord Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Discord Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Your Discord bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Test guild ID for faster command deployment during development (optional)
# Leave empty for global command registration
DISCORD_TEST_GUILD=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL password (change in production!)
POSTGRES_PASSWORD=changeme

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment: Development, Staging, or Production
ASPNETCORE_ENVIRONMENT=Production

# API port (default: 5000)
API_PORT=5000

# Log level: Trace, Debug, Information, Warning, Error, Critical
LOG_LEVEL=Information

# -----------------------------------------------------------------------------
# CORS Configuration (for web dashboard)
# -----------------------------------------------------------------------------
# Additional CORS origin (e.g., your frontend URL)
CORS_ORIGIN=

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# Docker Compose project name
COMPOSE_PROJECT_NAME=tilith